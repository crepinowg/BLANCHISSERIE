                                        {% endfor %}
                                        <li class="page-item">
                                          <a class="page-link" href="#" aria-label="Next">
                                            <span aria-hidden="true">&raquo;</span>
                                            <span class="sr-only">Next</span>
                                          </a>
                                        </li>
                                      </ul>
                                    </nav>
                                  </ul>
                            </div>
                            <!--end::Wrapper-->
                        </div>
                        <!--end::Body-->
                        <!-- begin::Footer-->
                        <div class="d-flex flex-stack flex-wrap mt-lg-20 pt-13">
                            <!-- begin::Actions-->
                            <div class="my-1 me-5">
                                <!-- begin::Pint-->
                                <button type="button" class="btn btn-success my-1 me-12" onclick="window.print();">Imprimer</button>
                                <!-- end::Pint-->
                                <!-- begin::Download-->
                                <button type="button" class="btn btn-light-success my-1">Télécharger</button>
                                <!-- Icône "edit" -->
                                <i class="fas fa-edit btn-primary"></i>

                                <!-- Icône "delete" -->
                                <i class="fas fa-trash btn-danger"></i>

                                <!-- end::Download-->
                            </div>

                            {% set k=1 %}
                            {% for livr in facture %}

                            {% if livr.etat=='LAVAGE'%}
                            {% if k==loop.index%}
                            <a href="{{path('app.statut.facture' , {id: livr.id})}}" class="btn btn-danger my-1">LAVAGE</a>
                            
                            {% endif %}
                            {% endif %}
                            {% if livr.etat=='ATTENTE'%}
                            {% if k==loop.index%}
                            <a href="{{path('app.statut2.facture' , {id: livr.id})}}" class="btn btn-warning my-1">LIVRAISON</a>
                            
                            {% endif %}
                            {% endif %}
                            {% if livr.etat=='LIVRAISON'%}
                            {% if k==loop.index%}
                            <a href="" class="btn btn-primary my-1">LIVRER & PAYER</a>
                            {% endif %}
                            {% endif %}
                            {% endfor%}
                            <!-- end::Actions-->
                            <!-- begin::Action-->
                            
                            <!-- end::Action-->
                        </div>
                        <!-- end::Footer-->
                    </div>
