                                <a disabled class="nav-link disabled">
                                    <i class="nav-link-icon lnr-file-empty"></i>
                                    <span> File Disabled</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <ul class="body-tabs body-tabs-layout tabs-animated body-tabs-animated nav">
       
    </ul>
    <!--begin::Container-->
    <div id="kt_content_container" class="d-flex flex-column-fluid align-items-start container-xxl">
        <!--begin::Post-->
        <div class="content flex-row-fluid" id="kt_content">
            <!-- begin::Invoice 3-->
            <div class="card">
                <!-- begin::Body-->
                <div class="card-body py-20">
                    <!-- begin::Wrapper-->
                    <div class="mw-lg-950px mx-auto w-100">
                        <!-- begin::Header-->
                        <div class="d-flex justify-content-between flex-column flex-sm-row mb-19">
                            {% set k=1 %}
                            {% for factureId in facture %}
                            {% if k==loop.index%}
                                <h4 class="fw-boldest text-gray-800 fs-2qx pe-5 pb-7">FACTURE - #{{factureId.factureidnumber}}</h4>
                            {% endif %}
                            {% endfor %}
                            <!--end::Logo-->
                            <div class="text-sm-end">
                                <!--begin::Logo-->
                                <a href="#" class="d-block mw-150px ms-sm-auto">
                                    <img alt="Logo" src="../../../assets/media/svg/brand-logos/lloyds-of-london-logo.svg" class="w-100" />
                                </a>
                                <!--end::Logo-->
                                <!--begin::Text-->
                                <div class="text-sm-end fw-bold fs-4 text-muted mt-7">
                                    <div>Cecilia Chapman, 04 BP 405, Lomé-Togo</div>
                                    <div>{{entreprise.numerotelentre}}, {{entreprise.emailentre}}</div>
                                </div>
                                <!--end::Text-->
                            </div>
                        </div>
                        <!--end::Header-->
                        <!--begin::Body-->
                        <div class="pb-12">
                            <!--begin::Wrapper-->
                            <div class="d-flex flex-column gap-7 gap-md-10">
                                <!--begin::Message-->
                                <div id="toPrint">
                                {% for clientInformation in client.utilisateur%}
                                <div class="fw-bolder fs-2">
                                    
                                      <span class="text text-capitalize">{{clientInformation.username}} {{clientInformation.nom}}</span> 
                                    
                                <span class="fs-6">({{clientInformation.email}})</span>,
                                <br />
                                <span class="text-muted fs-5">Nos produit ne sont pas repris après service. Merci pour votre compréhension.</span></div>
                                <!--begin::Message-->
                                <!--begin::Separator-->
                                <div class="separator"></div>
                                <!--begin::Separator-->
                                <!--begin::Order details-->
                                <div class="d-flex flex-column flex-sm-row gap-7 gap-md-10 fw-bolder">
                                    {% set k=1 %}
                                    {% for factureId in facture %}
                                    {% if k==loop.index%}
                                    
                                    <div class="flex-root d-flex flex-column">
                                        <span class="text-muted">Order ID</span>
                                        <span class="fs-5">#{{factureId.factureidnumber}}</span>
                                    </div>
                                    {% endif %}
                                    {% endfor %}
                                    <div class="flex-root d-flex flex-column">
                                        <span class="text-muted">Date</span>
                                        <span class="fs-5">{{entete.daterecuperation | date('d M, Y')}}</span>
                                    </div>
                                    {% set k=1 %}
                                    {% for factureId in facture %}
                                    {% if k==loop.index%}
                                    <div class="flex-root d-flex flex-column">
                                        <span class="text-muted">Invoice ID</span>
                                        <a href="{{path('app.facture.showInvoice' , {id: factureId.id})}}"><span class="fs-5">#INV-00{{factureId.invoicecode}}</span></a>
                                    </div>
                                    <div class="flex-root d-flex flex-column">
                                        <span class="text-muted">Old Order ID</span>
                                        <span class="fs-5">#{{factureId.numfacture}}</span>
                                    </div>
                                    {% endif %}
                                    {% endfor %}
                                </div>

                                <!--end::Order details-->
                                <!--begin::Billing & shipping-->
                                <div class="d-flex flex-column flex-sm-row gap-7 gap-md-10 fw-bolder">
                                    <div class="flex-root d-flex flex-column">
                                        <span class="text-muted">Adresse de Livraison</span>
                                        <span class="fs-6">{{client.indication}},
                                        <br />{{client.zip}},
                                        <br />{{clientInformation.adresse}},
                                        <br />TOGO.</span>
                                    </div>
                                    <div class="flex-root d-flex flex-column">
                                        <span class="text-muted">Adresse de Collecte</span>
                                        <span class="fs-6">{{client.indication}},
                                        <br />{{client.zip}},
                                        <br />{{clientInformation.adresse}},
                                        <br />TOGO.</span>
                                    </div>
                                </div>
                                {% endfor %}
                                <!--end::Billing & shipping-->
                                <!--begin:Order summary-->
                                <div class="d-flex justify-content-between flex-column">
                                    <!--begin::Table-->
                                    <div class="table-responsive border-bottom mb-9">
                                        <table class="table align-middle table-row-dashed fs-6 gy-5 mb-0">
                                            <thead>
                                                <tr class="border-bottom fs-6 fw-bolder text-muted">
                                                    <th class="min-w-175px pb-2">Désign.</th>
                                                    <th class="min-w-70px text-end pb-2">P.U</th>
                                                    <th class="min-w-80px text-end pb-2">QTY</th>
                                                    <th class="min-w-100px text-end pb-2">Total</th>
                                                </tr>
                                            </thead>
                                            <tbody class="fw-bold text-gray-600">
                                                {% set k=1 %}
                                                {% for entete in facture%}
                                                
                                                {% if k==loop.index%}
                                                {% for entete1 in entete.entete%}
                                                {% if entete1.statut == 0 %}
                                                <!--begin::Products-->
                                                <tr>
                                                    <!--begin::Product-->
                                                    <td>
                                                        <div class="d-flex align-items-center">
                                                            <!--begin::Thumbnail-->
                                                            <a href="../../ecommerce/catalog/edit-product.html" class="symbol symbol-50px">
                                                                <span class="symbol-label" style="background-image:url(../../../assets/media/stock/ecommerce/1.gif);"></span>
                                                            </a>
                                                            <!--end::Thumbnail-->
                                                            <!--begin::Title-->
                                                            <div class="ms-5 text-capitalize">
                                                                {{entete1.tarifs.icons.nomicon}}
                                                                    {% if entete1.express == 1 and entete1.expressdelivered == 0%}
                                                                    <a href="{{path('app.facture.express_livrer' , {id: entete1.id})}}"><div class="badge badge-danger">COLLECTE</div></div>
                                                                    {% elseif entete1.express == 1 and entete1.expressdelivered == 1%}
                                                                    <div class="badge badge-info">LIVRER</div>
                                                                    {% endif %}
                                                                    {% if entete1.express == 1 %}
                                                                        <div class="badge badge-primary">EXPRESS</div>
                                                                    {% endif %}
                                                                    {% if entete1.express == 0 %}
                                                                        <div class=""></div>
                                                                    {% endif %}
                                                                <div class="fs-7 text-muted">Delivery Date: {{entete.datelivraison | date('d/m/y')}}</div>
                                                            </div>
                                                            <!--end::Title-->
                                                        </div>
                                                    </td>
                                                    
                                                    
                                                    <!--end::Product-->
                                                    <!--begin::SKU-->
                                                    <td class="text-end">{{entete1.tarifs.prix | number_format}}F</td>
                                                    <!--end::SKU-->
                                                    <!--begin::Quantity-->
                                                    <td class="text-end">{{entete1.quantite | number_format}}</td>
                                                    <!--end::Quantity-->
                                                    <!--begin::Total-->
                                                    <td class="text-end">{{entete1.prixtotal | number_format}}F</td>
                                                    
                                                    <!--end::Total-->
                                                </tr>
                                                {% endif %}
                                                {% endfor %}
                                                {% set k=loop.index %}
                                                {% endif %}
                                                
                                                {% endfor %}
                                                <!--begin::Subtotal-->
                                                {% set k=1 %}
                                                {% for entete in facture%}
                                                {% if k==loop.index%}
                                               
                                                
                                                
                                                
                                                <tr>
                                                    <td colspan="3" class="text-end">Subtotal</td>
                                                    <td class="text-end">{{entete.totalttc}}F</td>
                                                </tr>
                                                <!--end::Subtotal-->
                                                <!--begin::VAT-->
                                                <tr>
                                                    <td colspan="3" class="text-end">VAT ({{entete.tauxreduction}})%</td>
                                                    <td class="text-end">{{entete.totaltva}}F</td>
                                                </tr>
                                                <!--end::VAT-->
                                                <!--begin::Shipping-->
                                               <!--<tr>
                                                    <td colspan="3" class="text-end">Shipping Rate</td>
                                                    <td class="text-end">5.00F</td>
                                                </tr>-->
                                                <!--end::Shipping-->
                                                <!--begin::Grand total-->
                                                <tr>
                                                    <td colspan="3" class="fs-3 text-dark fw-bolder text-end">Grand Total</td>
                                                    <td class="text-dark fs-3 fw-boldest text-end">{{entete.totaltva}} F</td>
                                                </tr>
                                                {% endif %}
                                                {% endfor %}
                                                <!--end::Grand total-->
                                            </tbody>
                                        </table>
                                    </div>
                                    <!--end::Table-->
                                </div>
                                </div>
                                <!--end:Order summary-->
                                <ul>

                                    <nav aria-label="...">
                                      <ul class="pagination">
                                        <li class="page-item">
                                          <a class="page-link" href="#" aria-label="Previous">
                                            <span aria-hidden="true">&laquo;</span>
